{
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 180,
        "lineEnding": "lf",
        "ignore": []
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 180,
            "lineEnding": "lf",
            "quoteStyle": "single",
            "trailingCommas": "none"
        },
        "globals": ["isServer", "isClient", "__"]
    },
    "css": {
        "parser": {
            "cssModules": true
        }
    }
}
